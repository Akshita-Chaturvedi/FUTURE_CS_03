# example .env (DO NOT commit your real keys)

# Generate a strong passphrase using: python keygen.py
MASTER_PASSPHRASE=CHANGE_TO_STRONG_SECRET

# Optional salt (also generated by keygen.py)
KEY_SALT=OPTIONAL_SALT_VALUE

# Flask secret key
APP_SECRET=change_this_flask_secret

# Storage folder for encrypted files
STORAGE_DIR=storage

# SQLite database path
DB_PATH=metadata.db

# PBKDF2 iterations for key derivation
KEY_ITER=200000
